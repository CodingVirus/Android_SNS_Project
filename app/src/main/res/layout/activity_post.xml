<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPost"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/move_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_back_3" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="탐색 탭"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                app:civ_border_overlay="true"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"
                android:src="@drawable/profile_image"/>

            <TextView
                android:id="@+id/post_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="User name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/post_profile_dot"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="150dp"
                android:src="@drawable/dotdotdot" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/post_pic_5" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/post_icon_two" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/post_icon_three" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/post_icon_one" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/post_icon_four" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textSize="20sp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_home"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_1st" />

            <ImageView
                android:id="@+id/iv_community"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_5th" />

            <ImageView
                android:id="@+id/iv_add"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_3rd" />

            <ImageView
                android:id="@+id/iv_alarm"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_4th" />

            <ImageView
                android:id="@+id/iv_my_page"
                style="@style/BottomIconStyle" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>