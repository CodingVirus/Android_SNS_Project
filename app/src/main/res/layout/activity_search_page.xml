<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="#22000000"
                android:gravity="center"
                android:iconifiedByDefault="false"
                android:queryHint="검색" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="instagram_post">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/title_view"
                android:layout_margin="20dp"
                android:columnCount="3"
                android:rowCount="100">

                <ImageView
                    android:id="@+id/page_one"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/post_pic_5" />

                <ImageView
                    android:id="@+id/page_two"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_2"/>

                <ImageView
                    android:id="@+id/page_three"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_3"/>

                <ImageView
                    android:id="@+id/page_four"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_4"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_5"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_2"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_3"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_4"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_5"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_2"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_3"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_4"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_5"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_2"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_3"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:src="@drawable/post_pic_4"/>

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp" />

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp" />


            </GridLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_home"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_1st" />


            <ImageView
                android:id="@+id/iv_community"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_5th" />

            <ImageView
                android:id="@+id/iv_add"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_3rd" />

            <ImageView
                android:id="@+id/iv_alarm"
                style="@style/BottomIconStyle"
                android:scaleType="fitXY"
                android:src="@drawable/icon_4th" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_my_page"
                style="@style/BottomIconStyle"
                android:src="@drawable/profile_image"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>